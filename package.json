{
    "name": "prikapp",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "prepare": "cd ./node_modules/typewriter-editor && npm install --production=false && npx tsc && npm install -D shx && npx shx cp src/*.svelte lib/",
        "test": "jest --env=jsdom test",
        "test:watch": "npm run test -- --watch"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.16.7",
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.0",
        "@testing-library/jest-dom": "^5.16.1",
        "@testing-library/svelte": "^3.0.3",
        "babel-jest": "^27.4.6",
        "jest": "^27.4.7",
        "rollup": "^2.3.4",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "^3.0.0",
        "svelte-jester": "^2.1.5"
    },
    "dependencies": {
        "dotenv": "^10.0.0",
        "typewriter-editor": "https://github.com/gllms/typewriter/tarball/gllms"
    },
    "jest": {
        "transform": {
            "^.+\\.svelte$": "svelte-jester",
            "^.+\\.js$": "babel-jest"
        },
        "moduleFileExtensions": [
            "js",
            "svelte"
        ],
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom/extend-expect"
        ]
    }
}
